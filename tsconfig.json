{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016", "esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src", // CRITICAL FIX: Added baseUrl to resolve @/ aliases
    "paths": {
      "@/*": ["*"] // CRITICAL FIX: Added path mapping for @/
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"], // CRITICAL FIX: Include test directory
  "exclude": ["node_modules", "dist"]
}